<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.wix.traitsoft.tpo_mnnit.Login">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="125dp"
        android:id="@+id/cardwelcome">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="40dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            />
    </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:id="@+id/cardpersonal"
       android:layout_below="@id/cardwelcome"
       android:layout_marginTop="10dp"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingLeft="10dp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"

           >
           <ImageView
               android:layout_height="100dp"
               android:layout_width="100dp"
               android:id="@+id/profilepic"
               android:src="@drawable/profilepic"
               />
           <TextView
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="Saksham Verma"
               android:layout_marginTop="10dp"
               android:textSize="20dp"
               android:textStyle="bold"
               android:layout_alignParentTop="true"
               android:id="@+id/name"
               android:layout_toRightOf="@id/profilepic"
               />
           <TextView
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_below="@id/name"
               android:id="@+id/email"
               android:layout_toRightOf="@id/profilepic"
               android:layout_marginTop="4dp"
               android:text="curious.saksham@gmail.com"
               />
           <TextView
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_below="@id/email"
               android:id="@+id/branch"
               android:layout_toRightOf="@id/profilepic"
               android:layout_marginTop="4dp"
               android:text="+91-7905841773"
               />
           </RelativeLayout>
   </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/cardpersonal"
        />
    <android.support.v7.widget.CardView

        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:layout_below="@id/cardpersonal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                >
                <TextView
                    android:text="Profile Status"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_height="130dp"
                    android:padding="30dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/verified"
                    />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:text="TPO Credits"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                />
                <ImageView
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/number"
                android:layout_width="match_parent"
                />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:text="Internship"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:text="Not Offered"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#f61717"

                    />

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
